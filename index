    <script>
        // 移动端菜单切换
        document.getElementById('menu-toggle').addEventListener('click', function() {
            const nav = document.getElementById('main-nav');
            nav.classList.toggle('hidden');
        });

        // 平滑滚动
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                // 关闭移动菜单（如果打开）
                document.getElementById('main-nav').classList.add('hidden');
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // 返回顶部按钮
        const backToTopButton = document.getElementById('back-to-top');
        
        window.addEventListener('scroll', () => {
            if (window.pageYOffset > 300) {
                backToTopButton.classList.remove('opacity-0', 'translate-y-10');
                backToTopButton.classList.add('opacity-100', 'translate-y-0');
            } else {
                backToTopButton.classList.remove('opacity-100', 'translate-y-0');
                backToTopButton.classList.add('opacity-0', 'translate-y-10');
            }
        });
        
        backToTopButton.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // 对比图表
        const ctx = document.getElementById('comparisonChart').getContext('2d');
        const comparisonChart = new Chart(ctx, {
            type: 'radar',
            data: {
                labels: [
                    '实用性', 
                    '逻辑严谨性', 
                    '理论深度', 
                    '应用广度', 
                    '教育价值',
                    '算法先进性'
                ],
                datasets: [
                    {
                        label: '《九章算术》',
                        data: [95, 70, 65, 90, 75, 85],
                        backgroundColor: 'rgba(44, 62, 80, 0.2)',
                        borderColor: 'rgba(44, 62, 80, 1)',
                        pointBackgroundColor: 'rgba(44, 62, 80, 1)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(44, 62, 80, 1)'
                    },
                    {
                        label: '《几何原本》',
                        data: [65, 95, 90, 70, 90, 60],
                        backgroundColor: 'rgba(192, 57, 43, 0.2)',
                        borderColor: 'rgba(192, 57, 43, 1)',
                        pointBackgroundColor: 'rgba(192, 57, 43, 1)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(192, 57, 43, 1)'
                    }
                ]
            },
            options: {
                elements: {
                    line: {
                        borderWidth: 3
                    }
                },
                scales: {
                    r: {
                        angleLines: {
                            display: true
                        },
                        suggestedMin: 0,
                        suggestedMax: 100
                    }
                }
            }
        });

        // 滚动动画
        const animateOnScroll = () => {
            const elements = document.querySelectorAll('.chapter-card');
            
            elements.forEach(element => {
                const elementPosition = element.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;
                
                if (elementPosition < windowHeight - 100) {
                    element.classList.add('opacity-100', 'translate-y-0');
                    element.classList.remove('opacity-0', 'translate-y-10');
                }
            });
        };
        
        // 初始设置
        document.querySelectorAll('.chapter-card').forEach(card => {
            card.classList.add('opacity-0', 'translate-y-10', 'transition-all', 'duration-700');
        });
        
        // 初始加载和滚动时触发动画
        window.addEventListener('load', animateOnScroll);
        window.addEventListener('scroll', animateOnScroll);
    </script>
</body>
